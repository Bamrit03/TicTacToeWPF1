<Window x:Class="TicTacToeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Nappit pelilaudalle -->
        <Button Name="Btn00" Click="Button_Click" Grid.Row="0" Grid.Column="0" Width="100" Height="100"/>
        <Button Name="Btn01" Click="Button_Click" Grid.Row="0" Grid.Column="1" Width="100" Height="100"/>
        <Button Name="Btn02" Click="Button_Click" Grid.Row="0" Grid.Column="2" Width="100" Height="100"/>
        <Button Name="Btn10" Click="Button_Click" Grid.Row="1" Grid.Column="0" Width="100" Height="100"/>
        <Button Name="Btn11" Click="Button_Click" Grid.Row="1" Grid.Column="1" Width="100" Height="100"/>
        <Button Name="Btn12" Click="Button_Click" Grid.Row="1" Grid.Column="2" Width="100" Height="100"/>
        <Button Name="Btn20" Click="Button_Click" Grid.Row="2" Grid.Column="0" Width="100" Height="100"/>
        <Button Name="Btn21" Click="Button_Click" Grid.Row="2" Grid.Column="1" Width="100" Height="100"/>
        <Button Name="Btn22" Click="Button_Click" Grid.Row="2" Grid.Column="2" Width="100" Height="100"/>
    </Grid>
</Window>
